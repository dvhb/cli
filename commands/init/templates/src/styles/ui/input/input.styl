.input
    -webkit-appearance none
    background #F7F9FC
    border 1px solid rgba($cGrey, .5)
    border-radius 2px
    box-shadow none
    box-shadow none
    box-sizing border-box
    color $cBlack
    display block
    font-family $font
    font-size 13px
    font-weight normal
    height 40px
    outline none
    padding 0 12px
    text-overflow ellipsis
    width 100%

    &::placeholder
        opacity .5
        color $cBlack

    &._disabled
    &[disabled]
        opacity .5

    &:focus
        border-color $cGreen

    &._error
        border-color $cRed

