.checkbox {
    display: inline-block;
    max-width: 100%;
    position: relative;

    &__label {
        cursor: pointer;
        display: flex;
        position: relative;

        &::before {
            background: #f7f9fc;
            border: 1px solid color(#c6c9ce a(10));
            border-radius: 2px;
            box-sizing: border-box;
            content: '';
            flex: none;
            height: 20px;
            width: 20px;
        }
    }

    &__input {
        left: 0;
        opacity: 0;
        position: absolute;
        top: 0;

        &:checked + .checkbox__label {
            &::after {
                background: $cGreen;
                border-radius: 2px;
                content: '';
                height: 12px;
                left: 4px;
                position: absolute;
                top: 4px;
                width: 12px;
            }
        }

        &[disabled] + .checkbox__label,
        &._disabled + .checkbox__label {
            cursor: default;
            opacity: 0.5;
        }
    }

    &__labelText {
        align-self: flex-start;
        font-size: 11px;
        font-weight: 500;
        line-height: normal;
        margin-left: 8px;
        padding-top: 3px;
        text-transform: uppercase;
    }
}

/* stylelint-disable selector-max-compound-selectors */
.checkbox.checkbox_slider {
    .checkbox__label {
        &::before {
            background: color(#000000 a(0.1));
            border: none;
            border-radius: 3px;
            height: 6px;
            margin: 7px 0;
            width: 28px;
        }

        &::after {
            background: #a8b1bf;
            border-radius: 50%;
            box-shadow: 0 3px 5px 0 rgba(12, 12, 66, 0.2);
            content: '';
            height: 16px;
            left: 0;
            position: absolute;
            top: 50%;
            transform: translate(0, -50%);
            transition: all 0.3s ease;
            transition-duration: 0.15s;
            transition-property: background, transform;
            width: 16px;
        }
    }

    .checkbox__input {
        &:checked + .checkbox__label {
            &::before {
                background: color(#000000 a(0.1));
                border: none;
            }

            &::after {
                background: $cGreen;
                border-radius: 50%;
                height: 16px;
                top: 50%;
                transform: translate(12px, -50%);
                width: 16px;
            }
        }
    }
}
/* stylelint-enable */
